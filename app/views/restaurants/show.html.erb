
<div class = "contents clearfix">
    <div id = image_restaurant>
      <img src="<%= @restaurant.imaege %>" alt="写真" >
    </div>
    <%=image_tag ('restaurant.png'), :size => '30x20' %>
    <h4> <%= @restaurant.name %> </h4>
    <div id = info_restaurant>
      <% if @restaurant.reviews.present? %>
      <%=image_tag ('star.png'), :size => '30x20' %>
        <div class="star-actived"><%= "平均点: #{@restaurant.review_average}/5" %></div>
      <% else %>
        <span class="rating-star">
          <i class="star-actived rate-0"></i>
        </span>
      <% end %>
      <%=image_tag ('tel.png'), :size => '30x20' %>
      <div id = tel> <%= @restaurant.tel %> </div>
      <%=image_tag ('clock.png'), :size => '30x20' %>
      <div id = open_time> <%= @restaurant.open_time %> </div>
      <%=image_tag ('money.png'), :size => '30x20' %>
      <div id = budget> <%= @restaurant.budget %> </div>
      <%=image_tag ('map.png'), :size => '30x20' %>
      <div id = address> <%= @restaurant.adress %> </div>
    </div>
</div>

<div id = down_show>
<% if current_user %>
    <%= form_for [@restaurant, @review] do |f| %>
            <div style="margin: 8px 0">
              <%=image_tag ('pen.png'), :size => '30x20' %>
              <%= f.label :Rate, style: { 'margin-right' => 8 } %>
              <%= f.number_field :rate, placeholder: 'Rate', value: 1, max: 5, min: 1, html: { class: "search__query", style: 'text-align: right;' } %>
            </div>

            <!-- <div style="margin: 8px 0">
              <%= f.text_area :review, placeholder: 'レビューを書いてね！', style: 'width: 30%;height: 100px;' %>
             --></div>

            <div class="row">
              <div class="col10 push1">
                <%= button_tag type: "submit", class: "btn btn--block" do %>
                  投稿する<i class="icon-arrow-right"></i>
                <% end %>
              </div>
            </div>
    <% end %>
  <% end %>
  <div class="reviews_see">
    <h4>＜ここはみんなの書いたコメントたち＞</h4>
    <% if @reviews %>
      <% @reviews.each do |review| %>
        <p>
          <strong><%= link_to review.user.name, "/users/#{review.user_id}" %>さんの</strong> <br>
          <%=image_tag ('star.png'), :size => '30x20' %>
          <%= review.rate %><br>
      <% end %>
    <% end %>
  </div>
</div>
